# This is Git's per-user configuration file.

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p

[core]
    # Clear output from git commands (grep, diff, log, etc.),
    # but also don't quit if the output is 1 page or less.
    pager = less -+X -+F

[init]
    defaultBranch = main

[push]
    autoSetupRemote = true

[rebase]
    updateRefs = true

[user]
    name = Ilya Kamens
    email = ilyakamens@gmail.com
