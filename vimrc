filetype plugin indent on

" show existing tab with 4 spaces width
set tabstop=4

" when indenting with '>', use 4 spaces width
set shiftwidth=4

" On pressing tab, insert 4 spaces
set expandtab

" Line numbers on by default
set number

" Syntax highlighting
syntax on

" select the last changed or pasted text
nnoremap gp `[v`]
